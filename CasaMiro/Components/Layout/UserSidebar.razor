@inject NavigationManager Navigation
<div class="sidebar-container">
    <div class="sidebar-header">
        <h4 class="text-center">User Dashboard</h4>
        <button class="toggle-sidebar" onclick="toggleSidebar()">
            <i class="fa-solid fa-bars"></i>
        </button>
    </div>
    <nav class="sidebar-links">
        <a href="/user-dashboard" class="@(IsActive("/user-dashboard") ? "active" : "")"><i class="fa-solid fa-tachometer-alt"></i><span>Home</span></a>
        <a href="/profile" class="@(IsActive("/profile") ? "active" : "")"><i class="fa-solid fa-user"></i><span>Profile</span></a>
        <a href="/user-announcements" class="@(IsActive("/user-announcements") ? "active" : "")"><i class="fa-solid fa-bullhorn"></i><span>Announcements</span></a>
        <a href="/userbillingandpayments" class="@(IsActive("/userbillingandpayments") ? "active" : "")"><i class="fa-solid fa-credit-card"></i><span>Billing & Payments</span></a>
        <a href="/userfacilityreservation" class="@(IsActive("/userfacilityreservation") ? "active" : "")"><i class="fa-solid fa-calendar-check"></i><span>Facility Reservations</span></a>
        <a href="/userservicerequests" class="@(IsActive("/userservicerequests") ? "active" : "")"><i class="fa-solid fa-wrench"></i><span>Service Requests</span></a>
        <a href="/userdocuments" class="@(IsActive("/documents") ? "active" : "")"><i class="fa-solid fa-file-alt"></i><span>Documents</span></a>
        <a href="/communityforum" class="@(IsActive("/communityforum") ? "active" : "")"><i class="fa-solid fa-users"></i><span>Community Forum</span></a>
        <a href="/usersecurity" class="@(IsActive("/usersecurity") ? "active" : "")"><i class="fa-solid fa-shield-alt"></i><span>Security</span></a>
        <a href="/usereventcalendar" class="@(IsActive("/usereventcalendar") ? "active" : "")"><i class="fa-solid fa-calendar"></i><span>Event Calendar</span></a>
        <a href="/user-feedback" class="@(IsActive("/user-feedback") ? "active" : "")"><i class="fa-solid fa-comment-dots"></i><span>Feedback & Complaints</span></a>
        <a href="/usersettings" class="@(IsActive("/usersettings") ? "active" : "")"><i class="fa-solid fa-cogs"></i><span>Settings</span></a>
    </nav>


    <!-- Logout Button -->
    <div class="sidebar-footer">
        <a href="/" class="logout"><i class="fa-solid fa-sign-out-alt"></i><span>Logout</span></a>
    </div>
</div>
<script>
    function toggleSidebar() {
    document.querySelector(".sidebar-container").classList.toggle("closed");
    }
</script>

@code{
    private bool IsActive(string path)
    {
        return Navigation.Uri.EndsWith(path, StringComparison.OrdinalIgnoreCase);
    }
}
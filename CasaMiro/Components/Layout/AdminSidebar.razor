@inject NavigationManager Navigation
<div class="sidebar-container">
    <div class="sidebar-header">
        <h4 class="text-center">Admin Dashboard</h4>
        <button class="toggle-sidebar" onclick="toggleSidebar()">
            <i class="fa-solid fa-bars"></i>
        </button>
    </div>

    <nav class="sidebar-links">
        <a href="/admin-dashboard" class="@(IsActive("/admin-dashboard") ? "active" : "")"><i class="fa-solid fa-house"></i><span>Dashboard</span></a>
        <a href="/userview" class="@(IsActive("/userview") ? "active" : "")"><i class="fa-solid fa-users"></i><span>View Users</span></a>
        <a href="/view-announce" class="@(IsActive("/view-announce") ? "active" : "")"><i class="fa-solid fa-bullhorn"></i><span>Announcements</span></a>
        <a href="/community" class="@(IsActive("/community") ? "active" : "")"><i class="fa-solid fa-comments"></i><span>Community Forum</span></a>
        <a href="/subdivision-events" class="@(IsActive("/subdivision-events") ? "active" : "")"><i class="fa-solid fa-calendar"></i><span>Event Calendar</span></a>
        <a href="/view-feedback" class="@(IsActive("/view-feedback") ? "active" : "")"><i class="fa-solid fa-clipboard-list"></i><span>Feedback</span></a>
        <a href="view-reports" class="@(IsActive("/view-reports") ? "active" : "")"><i class="fa-solid fa-chart-bar"></i><span>Reports</span></a>
        <a href="/admin-settings" class="@(IsActive("/admin-settings") ? "active" : "")"><i class="fa-solid fa-cogs"></i><span>Settings</span></a>
    </nav>

    <div class="sidebar-footer">
        <a href="/" class="logout"><i class="fa-solid fa-sign-out-alt"></i><span>Logout</span></a>
    </div>
</div>

<script>
    function toggleSidebar() {
        document.querySelector(".sidebar-container").classList.toggle("closed");
    }
</script>

@code {
    private bool IsActive(string path)
    {
        return Navigation.Uri.EndsWith(path, StringComparison.OrdinalIgnoreCase);
    }
}

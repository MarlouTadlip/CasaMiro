@inject NavigationManager Navigation
<div class="sidebar-container">
    <div class="sidebar-header">
        <h4 class="text-center">Staff Dashboard</h4>
        <button class="toggle-sidebar" onclick="toggleSidebar()">
            <i class="fa-solid fa-bars"></i>
        </button>
    </div>
    <nav class="sidebar-links">
        <a href="/staff-dashboard" class="@(IsActive("/staff-dashboard") ? "active" : "")"><i class="fa-solid fa-house"></i><span>Dashboard</span></a>
        <a href="/usermanagement" class="@(IsActive("/usermanagement") ? "active" : "")"><i class="fa-solid fa-users"></i><span>User Management</span></a>
        <a href="/announcements" class="@(IsActive("/announcements") ? "active" : "")"><i class="fa-solid fa-bullhorn"></i><span>Announcements</span></a>
        <a href="/billingandpayments" class="@(IsActive("/billingandpaymentsv") ? "active" : "")"><i class="fa-solid fa-credit-card"></i><span>Billing & Payments</span></a>
        <a href="/facilityreservation" class="@(IsActive("/facilityreservation") ? "active" : "")"><i class="fa-solid fa-building"></i><span>Facility Reservations</span></a>
        <a href="/servicerequests" class="@(IsActive("/servicerequests") ? "active" : "")"><i class="fa-solid fa-screwdriver-wrench"></i><span>Service Requests</span></a>
        <a href="/documentmanagements" class="@(IsActive("/documentmanagements") ? "active" : "")"><i class="fa-solid fa-folder"></i><span>Document Management</span></a>
        <a href="/communityforums" class="@(IsActive("/communityforums") ? "active" : "")"><i class="fa-solid fa-comments"></i><span>Community Forum</span></a>
        <a href="/Security" class="@(IsActive("/Security") ? "active" : "")"><i class="fa-solid fa-shield-alt"></i><span>Security Features</span></a>
        <a href="/eventcalendar" class="@(IsActive("/eventcalendar") ? "active" : "")"><i class="fa-solid fa-calendar"></i><span>Event Calendar</span></a>
        <a href="/feedback" class="@(IsActive("/feedback") ? "active" : "")"><i class="fa-solid fa-clipboard-list"></i><span>Feedback & Complaints</span></a>
        <a href="/reports" class="@(IsActive("/reports") ? "active" : "")"><i class="fa-solid fa-chart-bar"></i><span>Reports & Analytics</span></a>
        <a href="/settings" class="@(IsActive("/settings") ? "active" : "")"><i class="fa-solid fa-cogs"></i><span>Settings</span></a>
    </nav>

    <!-- Logout Button -->
    <div class="sidebar-footer">
        <a href="/" class="logout"><i class="fa-solid fa-sign-out-alt"></i><span>Logout</span></a>
    </div>
</div>
<script>
    function toggleSidebar() {
    document.querySelector(".sidebar-container").classList.toggle("closed");
    }
</script>

@code{
    private bool IsActive(string path)
    {
        return Navigation.Uri.EndsWith(path, StringComparison.OrdinalIgnoreCase);
    }
}
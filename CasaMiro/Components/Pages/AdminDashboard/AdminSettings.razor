@page "/admin-settings"
@using CasaMiro.Models
@inject NavigationManager Navigation

@using CasaMiro.Components.Layout
@layout AdminLayout


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card mt-3 shadow-sm">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Admin Settings</h4>
                    <span class="badge bg-secondary">Admin Only</span>
                </div>
                <div class="card-body">

                    <!-- Profile Settings -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2">Profile Information</h5>
                        <div class="d-flex align-items-center">
                            <img src="/images/admin-avatar.png" alt="Admin Avatar" class="rounded-circle me-3" width="80">
                            <div>
                                <p class="h6 mb-1">Administrator</p>
                                <p class="text-muted mb-0">admin@subdivision.com</p>
                            </div>
                        </div>
                        <hr>
                        <form>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Full Name</label>
                                    <input type="text" class="form-control" value="Administrator" readonly />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Email Address</label>
                                    <input type="email" class="form-control" value="admin@subdivision.com" readonly />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Contact Number</label>
                                    <input type="text" class="form-control" value="+63 912 345 6789" readonly />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Username</label>
                                    <input type="text" class="form-control" value="admin_casamiro" readonly />
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- System Preferences -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2">System Preferences</h5>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Notification Frequency</label>
                                <select class="form-select">
                                    <option selected>Daily</option>
                                    <option>Weekly</option>
                                    <option>Monthly</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Default Dashboard View</label>
                                <select class="form-select">
                                    <option selected>Overview</option>
                                    <option>Activity Log</option>
                                    <option>System Alerts</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Security Settings -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2">Security Settings</h5>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Current Password</label>
                                <input type="password" class="form-control" placeholder="********" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Two-Factor Authentication</label>
                                <select class="form-select">
                                    <option selected>Enabled</option>
                                    <option>Disabled</option>
                                </select>
                            </div>
                        </div>

                        <hr>
                        <div class="mb-3">
                            <h6 class="fw-bold">Change Password</h6>
                            <form>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="form-label">New Password</label>
                                        <input type="password" class="form-control" placeholder="New Password" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Confirm Password</label>
                                        <input type="password" class="form-control" placeholder="Confirm New Password" />
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end mt-3">
                                    <button type="submit" class="btn btn-primary">Change Password</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Notification Settings -->
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2">Notification Settings</h5>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="notifyAnniversary" checked />
                            <label class="form-check-label" for="notifyAnniversary">Notify about upcoming resident anniversaries</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="notifyEvents" checked />
                            <label class="form-check-label" for="notifyEvents">Notify about community events</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="notifyMaintenance" />
                            <label class="form-check-label" for="notifyMaintenance">Notify about pending maintenance requests</label>
                        </div>
                    </div>

                    <!-- Activity Log -->
                    <div>
                        <h5 class="border-bottom pb-2">Recent Activity</h5>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <span class="fw-bold">Password Change</span> - April 5, 2025
                            </li>
                            <li class="list-group-item">
                                <span class="fw-bold">Updated System Preferences</span> - April 4, 2025
                            </li>
                            <li class="list-group-item">
                                <span class="fw-bold">Created New Announcement</span> - April 2, 2025
                            </li>
                            <li class="list-group-item">
                                <span class="fw-bold">Resolved Maintenance Request</span> - March 30, 2025
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

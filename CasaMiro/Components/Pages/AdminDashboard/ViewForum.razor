@page "/community"
@using CasaMiro.Models
@inject NavigationManager Navigation

@using CasaMiro.Components.Layout
@layout DashboardLayout

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card mt-3 shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Community Forums Overview</h4>
                    <span class="badge bg-light text-dark">Admin View Only</span>
                </div>
                <div class="card-body">

                    <!-- Forum Categories -->
                    <div class="mb-4">
                        <h5 class="text-secondary">Categories</h5>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge bg-info text-dark px-3 py-2">Suggestions</span>
                            <span class="badge bg-warning text-dark px-3 py-2">Complaints</span>
                            <span class="badge bg-success px-3 py-2">Events</span>
                            <span class="badge bg-secondary px-3 py-2">General</span>
                        </div>
                    </div>

                    <!-- Forum Threads -->
                    <div class="list-group">

                        <div class="list-group-item list-group-item-action border rounded mb-3 shadow-sm">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    <img src="https://via.placeholder.com/40" class="rounded-circle me-3" alt="Avatar">
                                    <div>
                                        <strong>JohnDoe</strong>
                                        <small class="text-muted d-block">2 days ago</small>
                                    </div>
                                </div>
                                <span class="badge bg-info text-dark">Suggestion</span>
                            </div>
                            <h5 class="mb-2">[NOTICE] More Streetlights Needed in Park</h5>
                            <p class="text-muted mb-1">There are areas near the basketball court that are very dark at night. It can be dangerous for kids playing or residents walking home...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted small">Replies: 5</span>
                                <button class="btn btn-sm btn-outline-primary disabled">View</button>
                            </div>
                        </div>

                        <div class="list-group-item list-group-item-action border rounded mb-3 shadow-sm">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    <img src="https://via.placeholder.com/40" class="rounded-circle me-3" alt="Avatar">
                                    <div>
                                        <strong>MaryAnn</strong>
                                        <small class="text-muted d-block">5 days ago</small>
                                    </div>
                                </div>
                                <span class="badge bg-warning text-dark">Complaint</span>
                            </div>
                            <h5 class="mb-2">[ISSUE] Garbage Collection Delayed Again</h5>
                            <p class="text-muted mb-1">It's been three days since our bins were last emptied. There are already stray animals tearing into trash bags. This needs urgent attention...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted small">Replies: 3</span>
                                <button class="btn btn-sm btn-outline-primary disabled">View</button>
                            </div>
                        </div>

                        <div class="list-group-item list-group-item-action border rounded mb-3 shadow-sm">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    <img src="https://via.placeholder.com/40" class="rounded-circle me-3" alt="Avatar">
                                    <div>
                                        <strong>MarkLee</strong>
                                        <small class="text-muted d-block">1 week ago</small>
                                    </div>
                                </div>
                                <span class="badge bg-success">Event</span>
                            </div>
                            <h5 class="mb-2">[EVENT] Community Clean-Up Drive Proposal</h5>
                            <p class="text-muted mb-1">Hi everyone! I'm proposing a clean-up drive next Saturday morning at the riverside. It would be great to see volunteers and have the barangay support...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted small">Replies: 7</span>
                                <button class="btn btn-sm btn-outline-primary disabled">View</button>
                            </div>
                        </div>

                    </div>

                    <!-- Footer -->
                    <div class="mt-4 text-muted text-end small">
                        Showing 1–3 of 3 posts
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

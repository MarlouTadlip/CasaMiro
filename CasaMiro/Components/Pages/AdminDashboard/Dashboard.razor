@page "/dashboard"
@using CasaMiro.Components.Layout

@layout DashboardLayout
<div class="content">
    <h1>Admin Dashboard</h1><br>
    <p>Manage users, payments, services, and community engagement efficiently.</p>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Total Registered Homeowners</h5>
                    <h2>250</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Total Collected Payments</h5>
                    <h2>$50,000</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Total Feedback Submissions</h5>
                    <h2>120</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Payment Collection Overview</h5>
                    <canvas id="paymentsChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Service Requests Analysis</h5>
                    <canvas id="serviceChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    var ctx1 = document.getElementById('paymentsChart').getContext('2d');
    var paymentsChart = new Chart(ctx1, {
        type: 'bar',
        data: {
            labels: ['January', 'February', 'March', 'April', 'May', 'June'],
            datasets: [{
                label: 'Payments Collected ($)',
                data: [5000, 8000, 6000, 7500, 9000, 10000],
                backgroundColor: 'rgba(54, 162, 235, 0.6)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        }
    });

    var ctx2 = document.getElementById('serviceChart').getContext('2d');
    var serviceChart = new Chart(ctx2, {
        type: 'doughnut',
        data: {
            labels: ['Plumbing', 'Electrical', 'Security', 'Other'],
            datasets: [{
                data: [30, 40, 20, 10],
                backgroundColor: ['#ff6384', '#36a2eb', '#ffce56', '#4bc0c0']
            }]
        }
    });
</script>

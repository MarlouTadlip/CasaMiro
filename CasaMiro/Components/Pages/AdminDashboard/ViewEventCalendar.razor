@page "/subdivision-events"
@using CasaMiro.Components.Layout
@layout AdminLayout


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card mt-3 shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Event Calendar</h4>
                    <span class="badge bg-light text-dark">Admin Access</span>
                </div>
                <div class="card-body">

                    <!-- Month & Navigation -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <button class="btn btn-outline-secondary btn-sm" disabled>&lt; March</button>
                        <h5 class="mb-0">April 2025</h5>
                        <button class="btn btn-outline-secondary btn-sm" disabled>May &gt;</button>
                    </div>

                    <!-- Calendar Table -->
                    <div class="table-responsive">
                        <table class="table table-bordered text-center">
                            <thead class="table-light">
                                <tr>
                                    <th>Sun</th>
                                    <th>Mon</th>
                                    <th>Tue</th>
                                    <th>Wed</th>
                                    <th>Thu</th>
                                    <th>Fri</th>
                                    <th>Sat</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-muted">30</td>
                                    <td>1</td>
                                    <td>2</td>
                                    <td>3</td>
                                    <td>4</td>
                                    <td class="bg-warning text-white">5</td>
                                    <td>6</td>
                                </tr>
                                <tr>
                                    <td>7</td>
                                    <td>8</td>
                                    <td class="bg-info text-white">9</td>
                                    <td>10</td>
                                    <td>11</td>
                                    <td>12</td>
                                    <td>13</td>
                                </tr>
                                <tr>
                                    <td>14</td>
                                    <td>15</td>
                                    <td>16</td>
                                    <td>17</td>
                                    <td class="bg-primary text-white">18</td>
                                    <td>19</td>
                                    <td>20</td>
                                </tr>
                                <tr>
                                    <td>21</td>
                                    <td>22</td>
                                    <td>23</td>
                                    <td>24</td>
                                    <td>25</td>
                                    <td>26</td>
                                    <td>27</td>
                                </tr>
                                <tr>
                                    <td>28</td>
                                    <td>29</td>
                                    <td>30</td>
                                    <td class="text-muted">1</td>
                                    <td class="text-muted">2</td>
                                    <td class="text-muted">3</td>
                                    <td class="text-muted">4</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Legend -->
                    <div class="mb-3">
                        <span class="badge bg-warning text-dark me-2">Homeowners Meeting</span>
                        <span class="badge bg-info text-dark me-2">Community Activity</span>
                        <span class="badge bg-primary me-2">Health/Safety</span>
                    </div>

                    <!-- Upcoming Events List -->
                    <div class="mt-4">
                        <h5 class="text-secondary">Upcoming Subdivision Events</h5>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>Homeowners General Assembly</strong> – April 5, 2025
                                <br /><small class="text-muted">Clubhouse Function Hall • 4:00 PM</small>
                            </li>
                            <li class="list-group-item">
                                <strong>Neighborhood Clean-Up Drive</strong> – April 9, 2025
                                <br /><small class="text-muted">Meet at Guardhouse • 6:30 AM</small>
                            </li>
                            <li class="list-group-item">
                                <strong>Medical Mission Day</strong> – April 18, 2025
                                <br /><small class="text-muted">Subdivision Clinic • 8:00 AM to 1:00 PM</small>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
